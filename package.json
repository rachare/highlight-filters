{
  "name": "highlight-filters",
  "displayName": "Highlight Filters",
  "description": "Highlight lines in text/log files using configurable filters and groups.",
  "version": "1.0.0",
  "publisher": "rreddyt",
  "repository": {
    "type": "git",
    "url": "https://github.com/rachare/highlight-filters.git"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onView:filterPanel",
    "onLanguage:plaintext",
    "onLanguage:log"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Highlight Filters",
      "properties": {
        "highlightFilters.groups": {
          "type": "array",
          "description": "List of filter groups",
          "items": {
            "$ref": "#/definitions/group"
          }
        },
        "highlightFilters.matchedLinesViewEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable/disable the filtered view showing only matched lines."
        },
        "highlightFilters.ranges": {
          "type": "array",
          "description": "List of line ranges for filtering",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the range"
              },
              "name": {
                "type": "string",
                "description": "User-friendly name for the range"
              },
              "start": {
                "type": "number",
                "default": 0
              },
              "end": {
                "type": "number",
                "default": -1
              }
            }
          }
        },
        "highlightFilters.activeRangeId": {
          "type": "string",
          "description": "ID of the currently active range",
          "default": "default"
        },
        "foreground": {
          "type": "string"
        },
        "background": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "highlightEnabled": {
          "type": "boolean"
        }
      }
    },
    "commands": [
      {
        "command": "highlight-filters.toggleMatchedLinesView",
        "title": "Highlight Filters: Toggle Matched Lines View"
      }
    ],
    "menus": {
      "editor/title/context": [
        {
          "command": "highlight-filters.toggleMatchedLinesView",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "highlight-filters.toggleMatchedLinesView",
        "key": "ctrl+h",
        "mac": "cmd+h",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "highlightFilters",
          "title": "Highlight Filters",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "highlightFilters": [
        {
          "id": "filterPanel",
          "name": "Filter Manager",
          "icon": "filter",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.41"
  }
}
