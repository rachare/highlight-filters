{
  "name": "highlight-filters",
  "displayName": "Highlight Filters",
  "description": "Highlight lines in text/log files using configurable filters and groups.",
  "version": "1.0.0",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.70.0"
  },
  "activationEvents": [
    "onView:filterPanel",
    "onLanguage:plaintext",
    "onLanguage:log"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Highlight Filters",
      "properties": {
        "highlightFilters.groups": {
          "type": "array",
          "description": "List of filter groups",
          "items": {
            "$ref": "#/definitions/group"
          }
        },
        "highlightFilters.matchedLinesViewEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable/disable the filtered view showing only matched lines."
        }
      },
      "definitions": {
        "group": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "enabled": {
              "type": "boolean"
            },
            "filters": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/filter"
              }
            }
          }
        },
        "filter": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "pattern": {
              "type": "string"
            },
            "regex": {
              "type": "boolean"
            },
            "foreground": {
              "type": "string"
            },
            "background": {
              "type": "string"
            },
            "enabled": {
              "type": "boolean"
            },
            "highlightEnabled": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "highlight-filters.toggleMatchedLinesView",
        "title": "Highlight Filters: Toggle Matched Lines View"
      }
    ],
    "keybindings": [
      {
        "command": "highlight-filters.toggleMatchedLinesView",
        "key": "ctrl+h",
        "mac": "cmd+h",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "highlightFilters",
          "title": "Highlight Filters",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "highlightFilters": [
        {
          "id": "filterPanel",
          "name": "Filter Manager",
          "icon": "filter",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.41"
  }
}
